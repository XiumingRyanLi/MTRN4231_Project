<?xml version="1.0"?>
<robot name="end_effector" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Only a macro here. No ${prefix} outside this block. -->
  <xacro:macro name="end_effector" params="prefix parent *origin">

    <!-- Fixed mount to parent -->
    <joint name="${prefix}ee_mount" type="fixed">
      <parent link="${parent}"/>
      <child  link="${prefix}ee_body"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <!-- BODY (swap to your STL if you want) -->
    <link name="${prefix}ee_body">
      <visual>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <geometry>
          <!-- If using your mesh, uncomment the next 3 lines and remove the box -->
          <mesh filename="package://end_effector_description/meshes/claw_assembly.stl"
                scale="0.01 0.01 0.01"/>

          
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <geometry><box size="0.06 0.06 0.10"/></geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.5"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>

    <!-- Optional demo joint -->
    <joint name="${prefix}ee_hinge" type="continuous">
      <parent link="${prefix}ee_body"/>
      <child  link="${prefix}ee_tip"/>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}ee_tip">
      <visual>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <geometry><cylinder radius="0.015" length="0.04"/></geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <geometry><cylinder radius="0.015" length="0.04"/></geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.05"/>
        <inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4"/>
      </inertial>
    </link>

  </xacro:macro>
</robot>
